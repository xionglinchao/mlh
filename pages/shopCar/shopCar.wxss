/* pages/shopCar/shopCar.wxss */
page {width:100%;height:100%;}
.shopCarViewClass {width:100%;height:100%;}
.MenuCarClass {width:100%;height:calc(100% - 40px);}
.MenuCarClass .ShopViewClass {width:100%;height:100px;float:left;background:white;position:relative;}
.MenuCarClass .ShopViewClass .radioClass {width:20px;height:20px;margin-top:40px;margin-left:10px;float:left;}
.MenuCarClass .ShopViewClass .ImageClass {width:80px;height:80px;margin-top:10px;margin-left:10px;float:left;}
.MenuCarClass .ShopViewClass .menuViewClass {width:calc(100% - 130px);margin-left:10px;float:left;}
.MenuCarClass .ShopViewClass .menuViewClass .name {width:calc(100% - 50px);height:40px;line-height:20px;display:block;float:left;font-size:14px;color:#333;margin-top:10px;}
.MenuCarClass .ShopViewClass .menuViewClass .spec {width:100%;height:16px;line-height:16px;display:block;float:left;font-size:12px;color:#999;text-decoration:line-through;}
.MenuCarClass .ShopViewClass .menuViewClass .price {width:100%;height:24px;line-height:24px;display:block;float:left;font-size:15px;color:red;}
.MenuCarClass .ShopViewClass .clearImageClass {position:absolute;top:10px;right:10px;width:15px;height:15px;}
.MenuCarClass .ShopViewClass .GoodsNumClass {padding-bottom:5px;position:absolute;width:200px;float:right;bottom:10px;right:10px;}
.MenuCarClass .ShopViewClass .GoodsNumClass .sub {width:24px;height:24px;margin-top:8px;margin-left:10px;float:right;}
.MenuCarClass .ShopViewClass .GoodsNumClass .num {display:block;float:right;line-height:22px;padding:0px 1px;min-width:24px;text-align:center;margin-top:8px;font-size:14px;width:24px;}
.MenuCarClass .ShopViewClass .GoodsNumClass .add {width:24px;height:24px;margin-top:8px;float:right;}
.bottomViewClass {width:100%;height:40px;border-top:1px solid #f7f7f9;background:white;border-bottom:1px solid #f0f0f0;}
.bottomViewClass image {width:20px;height:20px;margin-top:10px;padding-left:10px;float:left;}
.allText {display:block;float:left;line-height:40px;padding-right:20px;color:#666;font-size:14px;padding-left:5px;}
.bottomViewClass .priceClass {display:block;float:right;line-height:40px;margin-right:20px;color:red;}
.bottomViewClass .goSendClass {display:block;float:right;line-height:40px;height:40px;padding:0px 10px;background:red;color:white;font-size:14px;}
.bottomViewClass .goSendClass1 {display:block;float:right;line-height:40px;height:40px;padding:0px 10px;background:#aaa;color:white;font-size:14px;}
.bottomViewClass .goSendClass text {font-size:12px;}
.bottomViewClass .goSendClass1 text {font-size:12px;}
