/* pages/send/send.wxss */

page {
  width: 100%;
  height: 100%;
}

.sendViewClass {
  width: 100%;
  height: 100%;
  background: #f0f0f0;
}

.addressViewClass {
  width: 100%;
  background: white;
}

.addressViewClass .addressImageClass {
  width: 20px;
  height: 20px;
  padding: 10px;
  margin-top: 22px;
  float: left;
}

.addressViewClass .NameViewClass {
  width: calc(100% - 70px);
  float: left;
  padding-top: 10px;
  padding-bottom: 10px;
}

.addressViewClass .NameViewClass .text1 {
  display: block;
  float: left;
  height: 30px;
  line-height: 30px;
  font-size: 13px;
  color: #565656;
}

.addressViewClass .NameViewClass .text2 {
  display: block;
  float: right;
  height: 30px;
  line-height: 30px;
  font-size: 13px;
  color: #565656;
}

.addressViewClass .NameViewClass .text3 {
  display: block;
  float: left;
  line-height: 25px;
  font-size: 13px;
  color: #565656;
  width: 100%;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.addressViewClass .noAdress {
  line-height: 85px;
  display: block;
  float: left;
  font-size: 17px;
  color: #565656;
  width: calc(100% - 70px);
}

.addressViewClass .rightViewClass {
  float: right;
  width: 20px;
  height: 20px;
  margin-left: 3px;
  margin-top: 32px;
}

.goodsClass {
  width: 100%;
  margin-bottom: 5px;
}

.dataViewClass {
  width: 100%;
  height: 113px;
  background: white;
  margin-top: 5px;
}

.dataViewClass .bookImageClass {
  width: 80px;
  height: 88px;
  margin-top: 5px;
  float: left;
  padding-left: 20px;
  padding-top: 10px;
  padding-right: 20px;
  padding-bottom: 10px;
}

.dataViewClass .nameViewClass {
  width: calc(100% - 130px);
  height: 100%;
  float: left;
  position: relative;
}

.dataViewClass .nameViewClass .text1 {
  display: block;
  float: left;
  line-height: 20px;
  margin-top: 15px;
  color: #565656;
  font-size: 14px;
  height: 40px;
  width: 100%;
}

.dataViewClass .nameViewClass .text2 {
  display: block;
  float: left;
  color: #666;
  font-size: 13px;
  line-height: 18px;
  text-decoration: line-through;
}

.dataViewClass .nameViewClass .priceViewClass {
  width: 100%;
  height: 30px;
  float: left;
  margin-top: 18px;
}

.dataViewClass .nameViewClass .priceViewClass text {
  display: block;
  float: left;
  color: red;
  font-size: 17px;
  line-height: 40px;
}

