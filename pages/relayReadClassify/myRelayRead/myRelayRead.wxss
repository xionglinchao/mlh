page,.page,.page__bd {height:100%;width:100%;background:#f0f0f0;}
.page__bd {padding-bottom:0;}
.weui-tab__content {float:left;height:calc(100% - 47px);width:100%;}
.weui-navbar {display:-webkit-box;display:-webkit-flex;display:flex;position:fixed;z-index:500;top:0;width:100%;float:left;}
.weui-tab {position:relative;height:100%;}
.weui-navbar__title {display:inline-block;font-size:14px;max-width:8em;width:auto;overflow:hidden;text-overflow:ellipsis;white-space:nowrap;word-wrap:normal;color:#333;}
.weui-navbar__item {position:relative;display:block;-webkit-box-flex:1;-webkit-flex:1;flex:1;padding:13px 0;text-align:center;font-size:0;background:white;float:left;}
.weui-navbar__item.weui-bar__item_on {color:#1aad19;}
.weui-navbar__slider {position:absolute;content:" ";left:0;bottom:0;width:50%;height:3px;background-color:#1aad19;-webkit-transition:-webkit-transform .3s;transition:-webkit-transform .3s;transition:transform .3s;transition:transform .3s,-webkit-transform .3s;}
.scrollClass {width:100%;margin-top:52px;}
.dataViewClass {width:100%;height:100px;background:white;border-top:1px solid #f0f0f0;}
.dataViewClass .bookImageClass {width:60px;height:70px;margin-top:15px;float:left;margin-left:15px;margin-right:15px;}
.dataViewClass .nameViewClass {width:calc(100% - 100px);height:100%;float:left;position:relative;}
.dataViewClass .nameViewClass .text1 {display:block;float:left;line-height:20px;margin-top:15px;color:#565656;font-size:16px;height:40px;width:100%;}
.dataViewClass .nameViewClass .text2 {display:block;float:left;color:#3d9c70;font-size:13px;}
.dataViewClass .nameViewClass .priceViewClass {width:100%;height:30px;float:left;}
.dataViewClass .nameViewClass .priceViewClass text {display:block;float:left;color:red;font-size:18px;line-height:40px;}
.dataViewClass .nameViewClass .priceViewClass .timeClass {display:block;float:right;font-size:14px;color:#999;}
.relay_book_state {position:absolute;right:5px;color:#ff6600;font-size:13px;}
