.page_box {
  width: 100%;
}

/* 顶部3张滑动图片 */
.swiper_box {
  width: 100%;
  height: 370rpx;
}

.slide_pic {
  width: 100%;
  height: 370rpx;
  position: relative;
  z-index: 1;
}

.content_box {
  width: 100%;
  height: 370rpx;
  background: rgba(0, 0, 0, 0.5);
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  position: absolute;
  z-index: 2;
  top: 0;
}

.content_title {
  max-width: 616rpx;
  font-size: 42rpx;
  color: #fff;
  padding-bottom: 50rpx;
}

.cont {
  max-width: 616rpx;
  height: 116rpx;
  font-size: 28rpx;
  color: #fff;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 3;
  overflow: hidden;
  text-align: center;
}

/* 书本列表 */
.book_box {
  width: 720rpx;
  margin-left: 30rpx;
  padding: 35rpx 0;
  border-bottom: 2rpx solid #D2D2D2;
  display: flex;
  justify-content: space-between;
  align-items: flex-end;
}

.left_info_box {
  display: flex;
}

.book_photo {
  width: 130rpx;
  height: 170rpx;
  border-radius: 10rpx;
  /* margin-bottom: 15rpx; */
  position: relative;
  z-index: 1;
}

.xilie_label {
  position: absolute;
  z-index: 2;
  top: 0;
  left: 0;
  width: 84rpx;
  height: 40rpx;
}

.book_cont {
  display: flex;
  flex-direction: column;
  padding-left: 20rpx;
  justify-content: space-between;
  height: 170rpx;
}

.book_title {
  max-width: 380rpx;
  font-size: 32rpx;
  color: #333333;
  /* padding-bottom: 10rpx; */
  font-weight: bold;
}

.brief_intro {
  max-width: 380rpx;
  font-size: 24rpx;
  color: #666666;
}

.price_num {
  display: flex;
  /* padding: 10rpx 0; */
}

.price, .group_num {
  font-size: 22rpx;
  color: #999999;
}

.price {
  padding-right: 20rpx;
}

.group_price {
  font-size: 32rpx;
}

.buy_btn {
  padding: 10rpx 12rpx;
  background: #F1BF38;
  font-size: 24rpx;
  color: #fff;
  border-radius: 6rpx;
  margin-right: 30rpx;
}