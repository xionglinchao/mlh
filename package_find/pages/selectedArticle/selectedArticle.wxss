@import "../../../wxParse/wxParse.wxss";

.scroll_list {
  width: 100%;
  height: 92vh;
}

.article_title {
  font-size: 38rpx;
  color: #333;
  font-weight: bold;
  width: 690rpx;
  padding: 30rpx;
}

.user_info {
  width: 690rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-left: 30rpx;
}

.photo_name_time {
  display: flex;
  align-items: center;
}

.user_photo {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
}

.name_time_box {
  display: flex;
  flex-direction: column;
  padding-left: 18rpx;
}

.name {
  font-size: 28rpx;
  color: #999;
  padding-bottom: 6rpx;
  max-width: 300rpx;
}

.time {
  font-size: 20rpx;
  color: #ababab;
}

.focus_btn {
  width: 105rpx;
  height: 55rpx;
  border: 2rpx solid #1eac58;
  border-radius: 4rpx;
  text-align: center;
  line-height: 55rpx;
  color: #1eac58;
  font-size: 28rpx;
}

.platform {
  margin: 10rpx 0;
}

.content_box {
  width: 690rpx;
  margin: 26rpx 0 30rpx 30rpx;
}

.article_content {
  font-size: 30rpx;
  color: #333;
}

.article_pic {
  width: 690rpx;
  height: 400rpx;
  margin-top: 10rpx;
}

.comment_container {
  display: flex;
  margin: 30rpx 0 0 30rpx;
  border-bottom: 2rpx solid #F0F0F0;
}

.user_pic {
  width: 90rpx;
  height: 90rpx;
  border-radius: 50%;
}

.user_info_box {
  display: flex;
  flex-direction: column;
  padding-left: 30rpx;
}

.comment_name_time {
  width: 576rpx;
  display: flex;
  justify-content: space-between;
}

.comment_name {
  font-size: 34rpx;
  color: #1EAC58;
}

.comment_time {
  font-size: 24rpx;
  color: #B7B6B6;
  padding-top: 8rpx;
}

.personal_sign {
  max-width: 576rpx;
  font-size: 24rpx;
  color: #999999;
  padding-top: 8rpx;
}

.comment_content {
  width: 576rpx;
  font-size: 28rpx;
  color: #333333;
  padding: 16rpx 0 18rpx 0;
}

.sec_container {
  background: #F0F0F0;
  margin-bottom: 20rpx;
}

.second_comment {
  width: 570rpx;
}

.reply_message {
  font-size: 24rpx;
  color: #999999;
  line-height: 40rpx;
  padding: 10rpx 0 10rpx 10rpx;
}

.reply_message_se {
  font-size: 24rpx;
  color: #999999;
  line-height: 40rpx;
  margin-left: 10rpx;
}

.delete_btn {
  font-size: 24rpx;
  color: #333333;
  display: flex;
  justify-content: flex-end;
  padding-bottom: 20rpx;
}

/* 底部交互栏 */

.interactive_box {
  width: 100%;
  height: 8vh;
  background: #FFFFFF;
  border-top: 1rpx solid #b1b1b1;
  display: flex;
  justify-content: space-between;
  align-items: center;
  position: fixed;
  bottom: 0;
  z-index: 10rpx;
}

.input_content {
  width: 340rpx;
  height: 70rpx;
  background: #f1f2f6;
  border-radius: 10rpx;
}

.bottomIocn_box {
  display: flex;
  justify-content: space-between;
  width: 234rpx;
  padding-right: 30rpx;
}

.icon_container {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.homePage {
  padding-left: 30rpx;
}

.liuyanIcon, .shareIcon, .homePage {
  font-size: 50rpx;
  color: #999;
}

.likeIcon {
  width: 46rpx;
  height: 42rpx;
  padding: 6rpx 0;
}

.icon_words {
  font-size: 22rpx;
  color: #333;
}

.shareBtn {
  line-height: normal;
  padding: 0;
  margin: 0;
  background: transparent;
}

.shareBtn::after {
  border: none;
}

/* 私密按钮 */
.lock_box {
  display: flex;
  justify-content: flex-end;
  align-items: center;
  padding: 0 30rpx 10rpx 0;
}

.lock_pic {
  width: 28rpx;
  height: 30rpx;
}

.lock_words {
  font-size: 24rpx;
  color: #666666;
  padding-left: 12rpx;
}

/*使屏幕变暗  */
.commodity_screen {
  width: 100%;
  height: 100%;
  position: fixed;
  top: 0;
  left: 0;
  background: #000;
  opacity: 0.2;
  overflow: hidden;
  z-index: 1000;
  color: #fff;
}

/*对话框 */
.commodity_attr_box {
  height: 300rpx;
  width: 100%;
  overflow: hidden;
  position: fixed;
  bottom: 0;
  left: 0;
  z-index: 2000;
  background: #fff;
  padding-top: 20rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.share_container {
  width: 540rpx;
  display: flex;
  justify-content: space-around;
  padding-top: 50rpx;
}

.share_box {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.share_words {
  font-size: 30rpx;
}

.words_1 {
  padding-top: 30rpx;
}

.icon_pic {
  width: 60rpx;
  height: 60rpx;
}