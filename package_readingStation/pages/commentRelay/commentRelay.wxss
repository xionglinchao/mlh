page {width:100%;height:100%;}
.p_view {width:100%;height:100%;/* background:#f0f0f0;*/}
.type2 {width:100%;height:auto;background:white;float:left;}
.type2 textarea {width:690rpx;padding:0 30rpx;margin-top:16rpx;height:29vh;border-bottom:15rpx solid #eaeaea;float:left;}
.type2 .ImageViewClass {width:100%;height:auto;float:left;margin-top:18rpx;}
.type2 .ImageViewClass .addImageViewClass {width:170rpx;height:170rpx;border:1rpx dashed #999;margin-left:40rpx;border-radius:4px;float:left;display:flex;flex-direction:column;align-items:center;justify-content:center;}
.type2 .ImageViewClass .addImageViewClass image {width:30px;height:30px;}
.type2 .ImageViewClass .addImageViewClass text {display:block;float:left;width:100%;height:20px;line-height:20px;text-align:center;font-size:12px;color:#999;}
.type2 .ImageViewClass .addImageView1Class {/* width:70px;*/  margin:0 40rpx;float:left;position:relative;}
.type2 .ImageViewClass .addImageView1Class .image2 {width:20px;height:20px;position:absolute;top:0px;right:0rpx;background:white;border-radius:50%;}
.type2 .ImageViewClass .addImageView1Class .image3 {width:30px;height:30px;position:absolute;top:25px;left:25px;}
.plViewClass {width:100%;height:40px;line-height:40px;text-align:center;font-size:14px;color:white;background:#1eac58;margin-top:20px;position:fixed;bottom:0px;}
.plViewClass button {background:#f60;padding-left:0px;padding-right:0px;color:white;font-size:14px;line-height:40px;border-radius:4px;}
.plViewClass button::after {content:none;}
.bottom_model_view {position:fixed;bottom:0px;width:100%;height:134px;z-index:20;}
.load_image_text {width:100%;display:block;float:left;height:40px;line-height:40px;border-bottom:1px solid #f0f0f0;font-size:15px;text-align:center;background:white;}
.load_video_text {width:100%;display:block;float:left;height:40px;line-height:40px;border-bottom:1px solid #f0f0f0;font-size:15px;text-align:center;background:white;}
.shot_text {width:100%;display:block;float:left;height:40px;line-height:40px;border-bottom:1px solid #f0f0f0;font-size:15px;text-align:center;background:white;}
.cancel_load_text {width:100%;display:block;float:left;height:45px;line-height:45px;font-size:15px;text-align:center;background:white;}
.backView {background:#f0f0f0;}
.image1 {width:170rpx;height:170rpx;}
