.page_box {
  width: 100%;
  height: 100vh;
}

/* 轮播图 */
.slide_pic {
  width: 100%;
  height: 330rpx;
}

.activ_pic {
  width: 100%;
  height: 330rpx;
  position: relative;
  display: block;
}

.activ_name {
  font-size: 28rpx;
  color: #FFFFFF;
  position: absolute;
  bottom: 26rpx;
  left: 30rpx;
  max-width: 690rpx;
}

/* 搜索栏 */
.search_box {
  width: 690rpx;
  height: 70rpx;
  background: #F2F2F2;
  border-radius: 35rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  margin: 20rpx 30rpx;
}

.searchIcon {
  font-size: 30rpx;
  color: #666666;
}

.search_words {
  font-size: 28rpx;
  color: #666666;
  padding-left: 15rpx;
}

/* 书本类目列表 */
.title_box {
  display: flex;
  justify-content: space-between;
  align-items: center;
  width: 690rpx;
  margin-left: 30rpx;
}

.catalog_pic {
  width: 130rpx;
  height: 50rpx;
  position: relative;
}

.catalog_title {
  font-size: 28rpx;
  color: #FFFFFF;
  position: absolute;
  top: 6rpx;
  left: 24rpx;
}

.dot_box {
  display: flex;
  align-items: center;
}

.green_dot {
  width: 8rpx;
  height: 8rpx;
  border-radius: 50%; 
  margin-left: 4rpx;
}

.book_box {
  width: 690rpx;
  height: 170rpx;
  margin: 15rpx 0 15rpx 30rpx;
  overflow: hidden;
  white-space: nowrap;
}

.swiper_box {
  display: inline-block
}

.each_book_box {
  display: flex;
  flex-direction: column;
  align-items: center;
  float: left
}

.book_pic {
  width: 110rpx;
  height: 130rpx;
  border-radius: 4rpx;
}

.book_name {
  font-size: 22rpx;
  color: #999999;
  padding-top: 12rpx;
  max-width: 110rpx;
}

.split_point {
  width: 42rpx;
  height: 10rpx;
  float: left;
  margin: 60rpx 68rpx;
}

/* 精选书单 */
.selected_box {
  width: 720rpx;
  margin-left: 30rpx;
  border-bottom: 2rpx solid #D2D2D2;
}
.book_list_box {
  display: flex;
  justify-content: space-between;
  align-items: center;
  width: 690rpx;
  padding: 30rpx 0;
}

.select_book_list {
  font-size: 32rpx;
  color: #333333;
  font-weight: bold;
}

.shareIcon_box {
  display: flex;
  align-items: center;
  padding: 0;
  margin: 0;
  line-height: normal;
  background: transparent;
}

.shareIcon_box::after {
  border: none;
}

.share_words {
  font-size: 30rpx;
  color: #333333;
  padding-right: 20rpx;
}

.shareIcon {
  font-size: 36rpx;
  color: #666666;
}

.content_container {
  display: flex;
  flex-direction: column;
  width: 690rpx;
}

.selected_title {
  font-size: 30rpx;
  color: #333333;
  padding: 10rpx 0 20rpx 0;
}

.selected_cont {
  font-size: 24rpx;
  color: #999999;
  padding-bottom: 40rpx;
}

.selected_book_box {
  overflow: hidden;
  height: 290rpx;
}

.selected_book {
  width: 200rpx;
  height: 270rpx;
  padding-bottom: 20rpx;
  float: left;
}

.selected_book:nth-child(2) {
  margin: 0 45rpx;
}

.loading_more {
  font-size: 24rpx;
  color: #666666;
  display: flex;
  justify-content: center;
  padding: 25rpx 0;
}