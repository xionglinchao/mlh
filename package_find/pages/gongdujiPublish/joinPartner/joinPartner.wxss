.open_course {
  width: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  overflow: scroll;
  padding-bottom: 100rpx;
}

.title_pic {
  width: 422rpx;
  height: 85rpx;
  margin-top: 50rpx;
  position: relative;
}

.call-up {
  position: absolute;
  top: 18rpx;
  left: 100rpx;
  font-size: 32rpx;
  color: #FFFFFF;
}

.top_bg_pic {
  width: 690rpx;
  height: 342rpx;
  margin: 30rpx 0;
}

.course_intro {
  font-size: 24rpx;
  color: #1eac58;
  text-align: center;
  width: 670rpx;
  margin-bottom: 20rpx;
}

.sub_title_box {
  width: 270rpx;
  height: 53rpx;
  position: relative;
  z-index: 1;
  margin: 10rpx 0 20rpx 0;
}

.sub_title_box2 {
  width: 270rpx;
  height: 53rpx;
  position: relative;
  z-index: 1;
  margin: 10rpx 0 20rpx 0;
}

.sub_title {
  font-size: 24rpx;
  color: #fff;
  position: absolute;
  top: 8rpx;
  left: 18rpx;
}

.list_container {
  display: flex;
  justify-content: space-between;
  width: 636rpx;
}

.list_box {
  display: flex;
  flex-direction: column;
}

.each_list {
  display: flex;
  align-items: center;
  padding-bottom: 20rpx;
}

.green_dot {
  width: 15rpx;
  height: 15rpx;
  border-radius: 50%;
  background: #1eac58;
}

.list_words {
  font-size: 24rpx;
  color: #1eac58;
  padding-left: 15rpx;
  max-width: 250rpx;
}

.list_box_2 {
  display: flex;
  flex-direction: column;
  width: 636rpx;
}

.each_list_2 {
  display: flex;
  align-items: center;
  padding-bottom: 20rpx;
}

.list_words_2 {
  font-size: 24rpx;
  color: #1eac58;
  padding-left: 15rpx;
  max-width: 610rpx;
}

.tips {
  width: 550rpx;
  height: 52rpx;
  background: #afe2c5;
  color: #1eac58;
  font-size: 24rpx;
  text-align: center;
  line-height: 52rpx;
  border-radius: 4rpx;
  margin: 5rpx 0 30rpx 0;
}

.agree_box {
  width: 100%;
  height: 86rpx;
  background: #eff9f3;
  display: flex;
  align-items: center;
}

.hook_box {
  width: 26rpx;
  height: 26rpx;
  border: 2rpx solid #d1d1d1;
  border-radius: 5rpx;
  margin-left: 30rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}

.hook {
  color: #09bb07;
}

.agreement {
  font-size: 28rpx;
  color: #333;
  margin-left: 30rpx;
}

.open_btn {
  position: fixed;
  bottom: 0;
  width: 100%;
  height: 100rpx;
  font-size: 36rpx;
  color: #fff;
  background: #1eac58;
  display: flex;
  justify-content: center;
  align-items: center;
}

.pay_info {
  width: 550rpx;
  height: 52rpx;
  background: #afe2c5;
  border-radius: 4px;
  margin: 30rpx 0;
  display: flex;
  justify-content: center;
  align-items: center;
}

.tip_words {
  font-size: 24rpx;
  color: #1eac58;
}
