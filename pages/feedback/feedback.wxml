<!--pages/feedback/feedback.wxml-->
<view class = "pClass">
    <form bindsubmit='btn_submit'>
    <view style='width: 100% ;height:10px;background: #f0f0f0;'></view>
    <view class="type2">
      <textarea placeholder="请输入反馈内容" placeholder-style='color: #999;font-size: 14px;' name="information" maxlength='500'></textarea>
      <view style="clear:both;"></view>
    </view>
    <button class = "bottomViewClass" form-type='submit'>确认</button>
    </form>
</view>


<view class = "ShowToastClass" hidden='{{isShowToast}}'>
    <image src='../../images/gou.png'></image>
    <text>{{toastData}}</text>
    <view style="clear:both;"></view>
</view>