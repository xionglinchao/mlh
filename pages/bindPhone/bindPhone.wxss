.page_box {
  width: 100%;
  height: 100vh;
  display: flex;
  flex-direction: column;
  align-items: center;
}
.phoneLogin {
  width: 100%;
  height: 550rpx;
}
.icon_box {
  width: 600rpx;
  padding: 10rpx 0;
  border-bottom: 1rpx solid #eeeeee;
  display: flex;
  align-items: center;
  margin-bottom: 30rpx;
}
.accoutIcon {
  width: 45rpx;
  height: 45rpx;
}
.phone_input {
  padding-left: 20rpx;
  font-size: 28rpx;
}
.tips {
  font-size: 28rpx;
}
.picture_input {
  width: 370rpx;
  padding-left: 20rpx;
  font-size: 28rpx;
}
.picture_code {
  width: 160rpx;
  height: 75rpx;
}
.SMS {
  width: 40rpx;
  height: 30rpx;
}
.SMSCode {
  width: 160rpx;
  font-size: 26rpx;
  color: #1eac58;
  text-align: center;
  padding: 0;
  margin: 0;
  background: transparent;
}
.SMSCode::after {
  border: none;
}
.confirmBtn {
  width: 600rpx;
  height: 100rpx;
  border-radius: 50rpx;
  background: #1eac58;
  font-size: 36rpx;
  color: #fff;
  display: flex;
  justify-content: center;
  align-items: center;
  margin-top: 80rpx;
}