.t-box {
  width: 100%;
  overflow: scroll;
  padding-bottom: 110rpx;
}

.top_info_box {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 15rpx 30rpx;
  box-shadow:0rpx 5rpx 10rpx 0rpx rgba(151,151,151,0.44);
}

/* 提问内容 */
.ques_pic {
  width: 220rpx;
  height: 220rpx;
  border-radius: 4rpx;
  vertical-align: top;
  background: lightblue;
}

.ques_cont_box {
  width: 100%;
  height: 220rpx;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  padding-left: 15rpx;
}

.ques_cont {
  font-size: 30rpx;
  color: #666666;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 3;
}

.user_info {
  display: flex;
  align-items: center;
}

.user_photo {
  width: 55rpx;
  height: 55rpx;
  border-radius: 50%;
  background: lightblue;
}

.user_name {
  font-size: 24rpx;
  color: #1EAC58;
  padding-left: 10rpx;
}

/* 回复内容 */
.reply_box {
  margin: 20rpx 0;
  box-shadow:0rpx 5rpx 10rpx 0rpx rgba(151,151,151,0.44);
}

.yuyin_cont {
  margin-left: 30rpx;
  padding-top: 30rpx;
  width: 690rpx;
  height: 250rpx;
  font-size: 32rpx;
}

/* 添加图片 */
.photo-box {
  width: 735rpx;
  margin: 16rpx 5rpx 0 10rpx;
  padding-bottom: 16rpx;
  display: flex;
  justify-content: flex-start;
  flex-wrap: wrap;
}

.add-photo {
  display: flex;
  flex-direction: column;
  align-items: center;
  width: 235rpx;
  height: 235rpx;
  background-color: #fafafa;
  border: 1rpx dashed #999;
  margin-right: 5rpx;
}

.camera {
  font-size: 90rpx;
  color: #aeaeae;
  padding-top: 40rpx;
}

.camera_words {
  font-size: 22rpx;
  color: #ccc;
}

.camera_note {
  font-size: 22rpx;
  color: #999;
  padding-top: 10rpx;
}

.submit-box {
  position: relative;
}

.submit {
  position: absolute;
  font-size: 36rpx;
  color: #fefefe;
  background-color: #eb810e;
  padding: 30rpx 302rpx;
}

.tempPhoto {
  width: 240rpx;
  height: 240rpx;
  margin: 0 5rpx 5rpx 0;
  position: relative;
}

.del_img {
  width: 20px;
  height: 20px;
  position: absolute;
  top: 2px;
  right: 2px;
  background: white;
  border-radius: 50%;
  z-index: 2;
}

/* 底部回复按钮 */
.reply_btn {
  width: 750rpx;
  height: 110rpx;
  box-shadow: 0rpx -5rpx 10rpx 0rpx rgba(151,151,151,0.44);
  position: fixed;
  bottom: 0;
  display: flex;
  justify-content: center;
  align-items: center;
}

.reply_words {
  width: 700rpx;
  height: 80rpx;
  border-radius: 40rpx;
  background: #1EAC58;
  color: #ffffff;
  font-size: 32rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}