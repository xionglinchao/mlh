/* pages/donateBook/donateBook.wxss */
page {width:100%;height:100%;}
.pClass {width:100%;height:100%;background:#f2f2f2;}
.scroll_data {width:100%;height:41px;float:left;}
.dataViewClass {width:calc(100% - 15px);height:40px;border-bottom:1px solid #eaeaea;margin-left:15px;position:relative;float:left;}
.text1 {display:block;float:left;line-height:40px;font-size:14px;color:#666;}
.text2 {display:block;float:right;line-height:40px;font-size:12px;color:#999;padding-right:10px;}
.dataViewClass image {width:20px;height:20px;margin-top:10px;float:right;margin-right:10px;}
.dataViewClass .dClass {position:absolute;right:8px;top:10px;width:4px;height:4px;background:red;border-radius:50%;}
.lxClass {width:100%;height:81px;background:white;float:left;}
.lxClass .view1 {width:calc(100% - 15px);height:40px;float:left;margin-left:15px;}
.lxClass .view1 .text1 {display:block;float:left;font-size:14px;color:#666;line-height:40px;}
.lxClass .view1 .text2 {display:block;float:right;font-size:14px;color:#999;line-height:40px;}
.bottom_v1 {background:#eaeaea;}
