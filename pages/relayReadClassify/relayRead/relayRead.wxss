}

.relayReadViewClass{
  width: 100%;height: 100%;background: #eaeaea;
}
.headViewClass{
  
}
.headTextClass{
  display: block;float: left;height: 40px;width: calc(100% - 10px);line-height: 40px;margin-left: 10px;color: #565656;font-size: 14px;
}

.bookViewClass{
  width: 100%;background: white;float:left;
}

.bookViewClass .scrollViewClass{
  width: 100%;height: 100%;
}
.bookViewClass .scrollViewClass .dataViewClass{
  width: calc(100% - 10px);height: 140px;border-bottom: 1px solid #eaeaea;margin-left: 10px;
}
.bookViewClass .scrollViewClass .dataViewClass .bookImageClass{
  width: 90px;height: 100px;padding: 10px;margin-top: 10px;float: left;margin-right: 10px;margin-bottom:  10px; 
}
.bookViewClass .scrollViewClass .dataViewClass .nameViewClass{
  width: calc(100% - 130px);height: 100%;float: left;position: relative;
}
.bookViewClass .scrollViewClass .dataViewClass .nameViewClass .text1{
  display: block;float: left;line-height: 25px;margin-top: 20px;color: #565656;font-size: 14px;height: 50px;width: 100%;
}
.bookViewClass .scrollViewClass .dataViewClass .nameViewClass .text2{
  display: block;float: left;height: 25px;line-height: 25px;width: 100%;color: #565656;font-size: 13px;
}
.bookViewClass .scrollViewClass .dataViewClass .nameViewClass .text3{
