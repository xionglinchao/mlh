page {background:#f2f2f2;width:750rpx;overflow-x:hidden;}
/* 选择地址 */
.top_select_address_box {width:100%;height:80rpx;position:fixed;top:0;display:flex;z-index:100;}
.choose_main,.choose_sub {flex:374rpx;display:flex;justify-content:center;align-items:center;background:rgba(255,255,255,0.7);}
.picker {width:750rpx;height:80rpx;font-size:32rpx;color:#1eac58;display:flex;justify-content:center;align-items:center;}
.choose_main {border-right:2rpx solid #f2f2f2;}
.main_icon_img {margin-right:40rpx;width:31rpx;height:40rpx;}
.main_text,.sub_text {font-size:32rpx;color:#1eac58;}
.down_icon {margin-left:40rpx;font-size:32rpx;color:#1eac58;}
/* 主图 */
.main_img {width:100%;height:485rpx;}
.mian_text {font-size:28rpx;display:flex;justify-content:center;align-items:center;position:relative;top:-89rpx;background:rgba(255,255,255,0.7);height:90rpx;}
/* 排行 */
.rank_box {width:100%;padding:16rpx 0 0 0;height:170rpx;background:#fff;}
.rank_scroll {width:100%;height:100%;white-space:nowrap;}
.rank_item {margin:0 36rpx;display:inline-block;width:178rpx;height:150rpx;}
.item_img_box {width:100%;height:100%;display:flex;justify-content:center;}
.rank_1_circle {width:138rpx;height:148rpx;position:absolute;}
.rank_2_circle,.rank_3_circle {width:138rpx;height:138rpx;position:absolute;top:16rpx;}
.user_1_avatar {width:100rpx;height:100rpx;border-radius:50%;position:absolute;top:30rpx;left:20rpx;z-index:1;}
.coin_1_num {width:100%;font-size:24rpx;color:#fefefe;position:absolute;top:100rpx;display:flex;justify-content:center;z-index:3;}
.coin_2_num,.coin_3_num {width:100%;font-size:24rpx;color:#fefefe;position:absolute;top:84rpx;display:flex;justify-content:center;z-index:3;}
.user_2_avatar,.user_3_avatar {width:100rpx;height:100rpx;border-radius:50%;position:absolute;top:20rpx;left:20rpx;z-index:1;}
.rank_1_sub,.rank_3_sub,.rank_2_sub {width:178rpx;height:44rpx;position:relative;top:96rpx;left:0rpx;z-index:2;}
/* 最新读书会 */
.rs_content_container {padding:25rpx;}
.title_line {width:700rpx;height:50rpx;margin-top:20rpx;}
.content_none {width:100%;height:200rpx;background:#f2f2f2;font-size:30rpx;display:flex;justify-content:center;align-items:center;}
.content_box {width:100%;background:#fff;margin-top:20rpx;padding-bottom:10rpx;}
.content_title {padding:14rpx;border-bottom:2rpx solid #f2f2f2;display:flex;justify-content:space-between;align-items:center;}
.title_left {display:flex;align-items:center;}
.head_img {width:55rpx;height:55rpx;}
.user_name {max-width:160rpx;font-size:30rpx;margin:0 10rpx 0 14rpx;color:#1eac58;}
.level-box {display:flex;justify-content:space-between;}
.green-medal,.red-medal,.yellow-medal {width:55rpx;height:55rpx;margin:0 4rpx;}
.time {font-size:28rpx;color:#1eac58;}
.content_info {padding:13rpx 10rpx 12rpx 20rpx;display:flex;}
.con_img {width:180rpx;height:180rpx;}
.con_text_box {line-height:1.6;width:465rpx;height:180rpx;margin-left:16rpx;display:flex;flex-direction:column;}
.text_top {display:flex;justify-content:space-between;align-items:flex-end;}
.con_name {width:300rpx;font-size:32rpx;color:#333;}
.distance {font-size:24rpx;color:#999;}
.con_intro {width:300rpx;font-size:24rpx;color:#999;}
.text_bot {margin-top:40rpx;display:flex;justify-content:space-between;align-items:flex-end;}
.join_family {font-size:24rpx;color:#ff5050;}
.from_place {max-width:200rpx;line-height:1.5;padding:12rpx 26rpx;font-size:24rpx;color:#1eac58;border:2rpx solid #1eac58;border-radius:40rpx;}
