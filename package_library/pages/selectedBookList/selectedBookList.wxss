.page_box {
  width: 100%;
  height: 100vh;
}

/* 顶部图片 */
.top_pic {
  width: 100%;
  height: 370rpx;
  position: relative;
  z-index: 1;
}

.content_box {
  width: 100%;
  height: 370rpx;
  background: rgba(0, 0, 0, 0.5);
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  position: absolute;
  z-index: 2;
  top: 0;
}

.content_title {
  width: 616rpx;
  font-size: 42rpx;
  color: #fff;
  padding-bottom: 50rpx;
  text-align: center;
}

.cont {
  max-width: 616rpx;
  height: 116rpx;
  font-size: 28rpx;
  color: #fff;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 3;
  overflow: hidden;
  text-align: center;
}

/* 书本列表 */
.book_box {
  width: 720rpx;
  margin-left: 30rpx;
  padding: 35rpx 0;
  border-bottom: 2rpx solid #D2D2D2;
  display: flex;
}

.book_photo {
  width: 130rpx;
  height: 170rpx;
  border-radius: 10rpx;
  margin-bottom: 15rpx;
  position: relative;
  z-index: 1;
}

.book_cont {
  display: flex;
  flex-direction: column;
  padding-left: 20rpx;
}

.book_title {
  max-width: 410rpx;
  font-size: 32rpx;
  color: #333333;
  padding-bottom: 10rpx;
  font-weight: bold;
}

.book_author {
  font-size: 28rpx;
  color: #333333;
  padding-bottom: 16rpx;
}

.brief_intro {
  max-width: 410rpx;
  font-size: 24rpx;
  color: #999999;
}