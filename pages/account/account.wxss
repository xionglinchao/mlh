page {width:100%;height:100%;}
.pViewClass {width:100%;height:100%;background:#f0f0f0;}
.view1 {width:100%;height:auto;background:white;}
.view_type {width:100%;height:61px;}
.view1 .view_type .type1 {width:calc(100% - 15px);height:60px;margin-left:15px;border-bottom:1px solid #f0f0f0;}
.view1  .view_type  .type1 .text1 {display:block;float:left;line-height:60px;font-size:16px;color:#666;}
.view1 .view_type  .type1 .headImageClass {width:40px;height:40px;margin-top:10px;margin-right:10px;float:right;}
.view1 .view_type  .type1 .rightClass {width:20px;height:20px;float:right;margin-top:20px;margin-right:10px;}
.view1 .type2 {width:calc(100% - 15px);height:50px;margin-left:15px;border-bottom:1px solid #f0f0f0;}
.view1 .type2 .text1 {display:block;float:left;line-height:50px;font-size:16px;color:#666;}
.view1 .type2 .text2 {display:block;float:right;line-height:50px;font-size:16px;color:#666;}
.view1 .type2 .rightClass {width:20px;height:20px;float:right;margin-top:15px;margin-right:10px;max-width:100px;}
.button1 {width:90%;height:45px;line-height:45px;padding:0px;border-radius:4px;position:fixed;bottom:40px;margin-left:5%;background:#ff6600;color:white;font-size:15px;}
.button1::after {content:none;}
.remarkInputClass {height:60px;width:100%;}
