.scroll_list {
  width: 100%;
  height: 91vh;
  background: #EAEAEA;
}

.selected_article {
  width: 750rpx;
  background: #fff;
  margin-bottom: 15rpx;
}

.selected_box {
  padding: 30rpx;
  display: flex;
  align-items: center;
}

.article_pic {
  width: 180rpx;
  height: 180rpx;
  margin-left: 28rpx;
}

.words_intro_box {
  display: flex;
  flex-direction: column;
}

.article_title {
  color: #333;
  font-size: 34rpx;
  padding-bottom: 10rpx;
}

.brief_content {
  width: 480rpx;
  /* height: 66rpx; */
  font-size: 24rpx;
  color: #999;
}

.author_info {
  width: 480rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding-top: 36rpx;
}

.name_photo {
  display: flex;
  align-items: center;
}

.author_photo {
  width: 30rpx;
  height: 30rpx;
  padding-right: 12rpx;
  border-radius: 50%;
}

.author_name {
  font-size: 24rpx;
  color: #333;
  max-width: 180rpx;
}

.check_message {
  display: flex;
  align-items: center;
}

.checkIcon, .liuyan1 {
  color: #b4b4b4;
  font-size: 26rpx;
  padding-right: 8rpx;
}

.check_num, .liuyan_num {
  font-size: 22rpx;
  color: #b4b4b4;
}

.check_num {
  padding-right: 20rpx;
}

.bottom_box {
  width: 100%;
  height: 9vh;
  background: #333333;
  position: fixed;
  bottom: 0;
  display: flex;
  align-items: center;
}

.toHomePage {
  width: 374rpx;
  height: 110rpx;
  text-align: center;
  line-height: 110rpx;
  font-size: 30rpx;
  color: #FFFFFF;
}

.middle_line {
  width: 2rpx;
  height: 60rpx;
  background: #616161;
}