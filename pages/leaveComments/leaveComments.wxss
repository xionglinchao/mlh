/* pages/leaveComments/leaveComments.wxss */
page {width:100%;height:100%;background:#f0f0f0;}
.head_view {width:100%;padding:8px 0px;height:40px;}
.input_view {width:calc(100% - 70px);height:40px;background:white;font-size:13px;padding-left:10px;color:#999;line-height:40px;float:left;}
.input_name {width:60px;display:block;float:left;background:#1eac58;font-size:14px;text-align:center;height:40px;color:white;line-height:40px;}
.comment_scroll {width:100%;height:calc(100% - 56px);}
.comment_content_view {width:100%;float:left;background:white;padding-bottom:8px;margin-bottom:5px;}
.comment_content_head_view {width:100%;height:50px;padding-top:8px;}
.item_head_image {width:40px;height:40px;float:left;margin-left:10px;}
.item_head_content {width:calc(100% - 140px);float:left;margin-left:10px;}
.item_head_content_name {display:block;float:left;width:100%;height:26px;line-height:26px;color:#333;font-size:14px;}
.item_head_content_time {display:block;float:left;width:100%;height:14px;line-height:14px;color:#999;font-size:12px;}
.item_head_h {display:block;float:right;margin-right:10px;line-height:40px;font-size:13px;color:#333;}
.item_head_h_image {float:right;padding:10px 5px;width:20px;height:20px;}
.item_content {width:calc(100% - 60px);margin-left:60px;line-height:18px;font-size:13px;}
.item_comment_scroll {width:calc(100% - 60px);margin-left:60px;padding-top:5px;}
.item2_view {width:100%;float:left;}
.item2_view text {display:block;float:left;line-height:20px;font-size:12px;color:#666;width:100%;}
