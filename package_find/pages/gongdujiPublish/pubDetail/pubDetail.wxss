.top_info_box {
  position: fixed;
  top: 0;
  background: #fff;
  z-index: 10;
  width: 690rpx;
  height: 100rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 15rpx 30rpx;
  border-bottom: 2rpx solid #f0f0f0;
}

.scroll_list {
  width: 100%;
  /* height: 82vh; */
  overflow: scroll;
  padding: 130rpx 0 100rpx 0;
}

.user_info {
  display: flex;
  align-items: center;
}

.user_photo {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
}

.name_sign_box {
  display: flex;
  flex-direction: column;
  padding-left: 15rpx;
}

.user_name {
  font-size: 28rpx;
  color: #1eac58;
  max-width: 400rpx;
}

.personal_sign {
  font-size: 20rpx;
  color: #ababab;
  max-width: 280rpx;
}

.btn_focus {
  width: 105rpx;
  height: 55rpx;
  font-size: 28rpx;
  color: #1eac58;
  border: 2rpx solid #1eac58;
  text-align: center;
  line-height: 55rpx;
  border-radius: 4rpx;
}

.cont_pic {
  border-bottom: 2rpx solid #eaeaea;
}

.content {
  font-size: 32rpx;
  color: #333;
  width: 690rpx;
  padding: 20rpx 0 10rpx 30rpx;
}

/* 九宫格 */

.comment_pic_box {
  width: 690rpx;
  margin: 10rpx 30rpx;
}

.dialog_video {
  width: 690rpx;
  height: 400rpx;
  margin: 10rpx 30rpx;
  position: relative;
}

.playIcon_box {
  width: 690rpx;
  height: 400rpx;
  position: absolute;
  top: 0;
  display: flex;
  justify-content: center;
  align-items: center;
}

.playIcon {
  font-size: 80rpx;
  color: #fff;
}

.comment_pic {
  width: 220rpx;
  height: 220rpx;
}

.comment_pic:nth-child(3n+2) {
  padding: 0 15rpx;
}

/* 评论栏 */

.comment_container {
  display: flex;
  margin: 30rpx 0 0 30rpx;
  border-bottom: 2rpx solid #f0f0f0;
}

.user_pic {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
}

.user_info_box {
  display: flex;
  flex-direction: column;
  padding-left: 30rpx;
}

.comment_name_time {
  width: 576rpx;
  display: flex;
  justify-content: space-between;
}

.comment_name {
  font-size: 30rpx;
  color: #1eac58;
  width: 250rpx;
}

.comment_time {
  font-size: 24rpx;
  color: #b7b6b6;
  padding-top: 8rpx;
}

.personal_sign {
  max-width: 576rpx;
  font-size: 24rpx;
  color: #999;
  padding-top: 8rpx;
}

.c_container {
  display: flex;
  align-items: flex-start;
}

.comment_content {
  /* width: 576rpx; */
  width: 520rpx;
  font-size: 28rpx;
  color: #333;
  padding: 16rpx 0 18rpx 0;
}

.sec_container {
  background: #f0f0f0;
  margin-bottom: 20rpx;
}

.second_comment {
  width: 520rpx;
}

.reply_message {
  font-size: 24rpx;
  color: #999;
  line-height: 40rpx;
  padding-left: 10rpx;
}

.reply_message_se {
  font-size: 24rpx;
  color: #999;
  line-height: 40rpx;
  margin-left: 10rpx;
}

.delete_btn {
  font-size: 24rpx;
  color: #333;
  display: flex;
  justify-content: flex-end;
  /* padding-bottom: 20rpx; */
  padding-top: 20rpx;
}

/* 底部交互栏 */

.interactive_box {
  position: fixed;
  bottom: 0;
  z-index: 10;
  width: 100%;
  height: 100rpx;
  background: #fff;
  border-top: 1rpx solid #b1b1b1;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.input_content {
  width: 340rpx;
  height: 70rpx;
  background: #f1f2f6;
  border-radius: 10rpx;
  padding: 0 10rpx;
}

.bottomIocn_box {
  display: flex;
  justify-content: space-between;
  width: 234rpx;
  padding-right: 30rpx;
}

.icon_container {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.homePage {
  padding-left: 30rpx;
}

.liuyanIcon, .shareIcon, .homePage {
  font-size: 50rpx;
  color: #999;
}

.likeIcon {
  width: 46rpx;
  height: 42rpx;
  padding: 6rpx 0;
}

.icon_words {
  font-size: 22rpx;
  color: #333;
}

.shareBtn {
  line-height: normal;
  padding: 0;
  margin: 0;
  background: transparent;
}

.shareBtn::after {
  border: none;
}

/*使屏幕变暗  */
.commodity_screen {
  width: 100%;
  height: 100%;
  position: fixed;
  top: 0;
  left: 0;
  background: #000;
  opacity: 0.2;
  overflow: hidden;
  z-index: 1000;
  color: #fff;
}

/*对话框 */
.commodity_attr_box {
  height: 300rpx;
  width: 100%;
  overflow: hidden;
  position: fixed;
  bottom: 0;
  left: 0;
  z-index: 2000;
  background: #fff;
  padding-top: 20rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.share_container {
  width: 540rpx;
  display: flex;
  justify-content: space-around;
  padding-top: 50rpx;
}

.share_box {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.share_words {
  font-size: 30rpx;
}

.words_1 {
  padding-top: 30rpx;
}

.icon_pic {
  width: 60rpx;
  height: 60rpx;
}

/* 私密按钮 */
.lock_box {
  display: flex;
  justify-content: flex-end;
  align-items: center;
  padding: 0 30rpx 10rpx 0;
}

.lock_pic {
  width: 28rpx;
  height: 30rpx;
}

.lock_words {
  font-size: 24rpx;
  color: #666666;
  padding-left: 12rpx;
}