/* 文章发布按钮 */
.pubBntBox  {
  width: 100%;
  display: flex;
  justify-content: center;
  margin-bottom: 40rpx;
}

.article_pub_btn {
  width: 200rpx;
  height: 80rpx;
  border-radius: 55rpx;
  background: #1EAC58;
  font-size: 36rpx;
  color: #FFF;
  text-align: center;
  line-height: 80rpx;
}

/* 私密按钮 */
.lock_box {
  display: flex;
  justify-content: flex-end;
  align-items: center;
  padding-right: 30rpx;
}

.lock_pic {
  width: 28rpx;
  height: 30rpx;
}

.lock_words {
  font-size: 24rpx;
  color: #666666;
  padding-left: 12rpx;
}