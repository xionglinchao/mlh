/* pages/library/library.wxss */
page {width:100%;height:100%;}
.weui-search-bar {position:relative;display:-webkit-box;display:-webkit-flex;display:flex;box-sizing:border-box;background-color:#f0f0f0;padding:8px 10px;border-radius:2px;}
.weui-icon-search {margin-right:4px;font-size:inherit;}
.weui-icon-search_in-box {position:absolute;left:10px;top:7px}
.weui-search-bar__text {display:inline-block;font-size:13px;vertical-align:middle;}
.weui-search-bar__form {position:relative;-webkit-box-flex:1;-webkit-flex:auto;flex:auto;border-radius:5px;background:white;}
.weui-search-bar__box {position:relative;padding-left:30px;padding-right:30px;width:100%;box-sizing:border-box;z-index:1}
.weui-search-bar__input {height:28px;line-height:28px;font-size:14px}
.weui-icon-clear {position:absolute;top:0;right:0;padding:7px 8px;font-size:0}
.weui-search-bar__label {position:absolute;top:0;right:0;bottom:0;left:0;z-index:2;border-radius:3px;text-align:center;color:#9b9b9b;background:white;line-height:28px}
.weui-search-bar__cancel-btn {line-height:28px;color:#09bb07;white-space:nowrap;background:white;font-size:13px;padding-left:10px;}
icon {vertical-align:middle;}
/** 文库分类*/.library_view {width:100%;height:calc(100% - 44px);}
.library_scroll_view {width:100%;height:100%;}
.classification_1_view {width:100%;float:left;}
.book_class_1_text {margin-left:10px;color:#1eac58;line-height:40px;font-size:15px;}
.classification_2_view {width:100%;background:white;background:white;float:left;padding:5px 0px;}
.classification_2_data {width:25%;float:left;}
.classification_2_data image {width:70%;float:left;margin-left:15%;margin-right:15%;margin-top:10px;border-radius:50%;}
.classification_2_data text {color:#999;line-height:20px;font-size:12px;width:100%;text-align:center;margin-top:5px;}
