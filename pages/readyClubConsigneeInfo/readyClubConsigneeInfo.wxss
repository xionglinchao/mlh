/* pages/addressRevise/addressRevise.wxss */
page {width:100%;height:calc(100% - 10px);background:#f0f0f0;}
.reviseViewClass {width:100%;height:calc(100% -20px);}
.view1 {width:100%;background:white;height:auto;margin-top:10px;}
.view1 .type1 {width:calc(100% - 15px);margin-left:15px;height:40px;border-bottom:1px solid #f0f0f0;}
.view1 .type1 text {display:block;float:left;font-size:13px;line-height:40px;width:80px;}
.view1 .type1 input {width:calc(100% - 80px);line-height:40px;height:40px;font-size:13px;float:left;}
.view1 .type2 {width:calc(100% - 15px);margin-left:15px;height:40px;border-bottom:1px solid #f0f0f0;float:left;}
.view1 .type2 .text1 {display:block;float:left;font-size:13px;line-height:40px;width:80px;}
.view1 .type2 .text2 {display:block;float:left;font-size:13px;line-height:40px;min-width:150px;height:40px;color:#666;}
.view1 .type2 image {width:20px;height:20px;margin-top:10px;margin-left:10px;}
.button1 {margin-top:40px;width:90%;margin-left:5%;padding:0px;color:white;background:#ff6600;font-size:15px;}
.button1::after {content:none;}
.view1 .type3 {width:calc(100% - 15px);margin-left:15px;float:left;}
.view1 .type3 text {display:block;float:left;bottom:0px;line-height:30px;width:80px;margin-top:5px;font-size:13px;height:30px;}
.view1 .type3 textarea {width:calc(100% - 90px);float:left;font-size:14px;min-height:30px;line-height:30px;overflow-y:visible;margin-top:5px;margin-bottom:5px;margin-right:10px;}
.libViewClass {width:120px;position:absolute;background:white;z-index:20;box-shadow:0px 0px 30px 10px #888888;}
.scroll {width:100%;height:100%;}
.scroll text {display:block;float:left;line-height:35px;padding-left:10px;font-size:13px;color:#666;}
