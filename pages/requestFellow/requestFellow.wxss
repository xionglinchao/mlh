/* pages/requestFellow/requestFellow.wxss */
page {width:100%;height:100%;}
.pView {width:100%;height:100%;}
.request {position:fixed;bottom:30px;background:#3c9d70;left:0px;width:95%;border-bottom-right-radius:5px;border-top-right-radius:5px;}
.textView {width:calc(100% - 10px);margin-left:10px;background:white;}
.headImage {width:100%;height:100%;vertical-align:middle;}
.request .textView .name {width:calc(100% - 10px);height:100%;float:left;}
.request .textView .name .text1 {width:calc(100% - 20px);height:40px;display:block;float:left;margin-left:20px;font-size:16px;font-weight:bold;line-height:40px;}
.request .textView .name .text2 {width:calc(100% - 20px);display:block;float:left;margin-left:20px;font-size:13px;line-height:24px;}
.request .textView .name .text3 {width:calc(100% - 20px);display:block;float:left;margin-left:20px;font-size:13px;line-height:24px;}
.request .textView .name .text4 {width:calc(100% - 20px);display:block;float:left;margin-left:20px;font-size:13px;line-height:24px;}
.request .textView .name .text5 {width:calc(100% - 20px);display:block;float:left;margin-left:20px;font-size:14px;line-height:24px;color:#ff6600;}
.request .textView .name .btn1 {width:80%;margin-left:10%;padding-left:0px;padding-right:0px;background:#3c9d70;color:white;height:35px;line-height:35px;font-size:14px;margin-top:20px;margin-bottom:20px;float:left;}
.request .textView .name .btn1::after {content:none;}
