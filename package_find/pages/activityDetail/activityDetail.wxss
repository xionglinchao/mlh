@import "../../../wxParse/wxParse.wxss";

.scroll_box {
  width: 100%;
  height: 92vh;
  background: #eaeaea;
}

.top_pic_bg {
  width: 750rpx;
  height: 340rpx;
  position: relative;
  z-index: 1;
  display: block;
}

.book_detail_box {
  display: flex;
  position: absolute;
  z-index: 2;
  top: 55rpx;
  left: 30rpx;
}

.book_pic {
  width: 230rpx;
  height: 230rpx;
}

.book_basic_info {
  display: flex;
  flex-direction: column;
}

.book_basic_info text {
  color: #fff;
}

.book_name {
  font-size: 32rpx;
  margin: 0 0 12rpx 22rpx;
}

.brief_intro {
  font-size: 26rpx;
  margin-left: 34rpx;
  max-width: 420rpx;
}

.price_box {
  margin: 6rpx 0 30rpx 34rpx;
}

.price_word {
  font-size: 28rpx;
}

.price {
  font-size: 34rpx;
}

.buy_now {
  font-size: 30rpx;
  color: #fff;
  background: #f60;
  width: 152rpx;
  height: 55rpx;
  border-radius: 4rpx;
  text-align: center;
  line-height: 55rpx;
  margin-left: 34rpx;
}

.join_detail {
  background: #fff;
  margin-bottom: 15rpx;
}

.join_detail view {
  margin-left: 30rpx;
  padding: 30rpx 0;
  border-bottom: 2rpx solid #e9eaec;
}

.book_theme {
  font-size: 34rpx;
  font-weight: bold;
  width: 690rpx;
}

.icon_box {
  display: flex;
  align-items: center;
}

.timeIcon, .placeIcon, .limitedIcon, .countdownIcon {
  font-size: 50rpx;
  color: #333;
  padding-right: 24rpx;
}

.icon_content {
  font-size: 28rpx;
  color: #333;
}

.placeLen {
  max-width: 620rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.countdown_number {
  font-size: 24rpx;
  color: #fff;
  width: 24rpx;
  height: 36rpx;
  background: #333;
  text-align: center;
  line-height: 36rpx;
  border-radius: 4rpx;
  margin-right: 4rpx;
}

.countdown_string {
  font-size: 24rpx;
  color: #333;
  margin-right: 4rpx;
}

.activity_container {
  background: #fff;
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-bottom: 15rpx;
}

.writer_info_box {
  width: 690rpx;
  padding: 30rpx;
  display: flex;
  align-items: center;
}

.writer_photo {
  width: 130rpx;
  height: 130rpx;
  border-radius: 50%;
  display: block;
}

.writer_basic_info {
  display: flex;
  flex-direction: column;
  padding-left: 16rpx;
}

.focus_box {
  display: flex;
  justify-content: space-between;
  align-items: center;
  width: 544rpx;
}

.writer_name {
  color: #333;
  font-size: 34rpx;
}

.focus {
  width: 106rpx;
  height: 54rpx;
  color: #1eac58;
  font-size: 28rpx;
  border: 2rpx solid #1eac58;
  border-radius: 4rpx;
  text-align: center;
  line-height: 54rpx;
}

.person_sign {
  color: #999;
  font-size: 24rpx;
  max-width: 400rpx;
}

.fans_acti {
  display: flex;
  align-items: center;
}

.fansIcon {
  font-size: 40rpx;
  color: #999;
  padding-right: 8rpx;
}

.fans, .balloon {
  font-size: 22rpx;
  color: #999;
  padding-right: 12rpx;
}

.fans_num, .ballon_num {
  color: #333;
  font-size: 24rpx;
}

.balloonIcon {
  font-size: 50rpx;
  color: #999;
  padding-left: 20rpx;
}

.from_place {
  width: 400rpx;
  height: 64rpx;
  border: 2rpx solid #1eac58;
  border-radius: 33rpx;
  color: #1eac58;
  font-size: 24rpx;
  text-align: center;
  line-height: 64rpx;
  margin-bottom: 30rpx;
}

.line_box {
  display: flex;
  align-items: center;
  padding: 20rpx 0;
}

.left_line, .right_line {
  width: 255rpx;
  height: 47rpx;
}

.line_words {
  color: #1eac58;
  font-size: 30rpx;
  padding: 0 16rpx;
}

.participants_box {
  width: 500rpx;
  height: 90rpx;
  background: linear-gradient (to right, white, green);
}

.participants {
  width: 76rpx;
  height: 76rpx;
  border-radius: 50%;
}

.join_num_box {
  width: 720rpx;
  margin: 20rpx 0 0 30rpx;
  border: 2rpx solid #65c76b;
  border-left: none;
  height: 90rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
  background: linear-gradient(to right, #fff, #e5f2e3);
}

.join_img_box {
  padding: 10rpx 0;
  max-width: 550rpx;
  height: 100%;
  overflow: hidden;
}

.join_member_avatar {
  margin: 8rpx 18rpx;
  width: 76rpx;
  height: 76rpx;
  border-radius: 50%;
}

.join_text_box {
  display: flex;
  height: 100%;
}

.text_elli {
  margin-right: 10rpx;
  display: flex;
  align-items: center;
  font-size: 40rpx;
  color: #65c76b;
}

.join_num_text {
  width: 168rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  font-size: 24rpx;
  color: #fff;
  background: #65c76b;
}

.tab_control {
  display: flex;
  justify-content: space-between;
  /* align-items: center; */
  width: 690rpx;
  height: 80rpx;
  padding-left: 30rpx;
  border-bottom: 2rpx solid #f0f0f0;
}

.tab_control text {
  font-size: 28rpx;
  padding-top: 25rpx;
}

.click_style {
  color: #1eac58;
  border-bottom: 2rpx solid #1eac58;
}

.green_dot {
  width: 8rpx;
  height: 8rpx;
  background: #1eac58;
  border-radius: 50%;
  margin-top: 38rpx;
}

.activ_rule_box {
  display: flex;
  flex-direction: column;
  /* align-items: center; */
}

.introIcon_box {
  display: flex;
  align-items: center;
  justify-content: center;
  margin: 25rpx 0;
}

.introduceIcon {
  font-size: 46rpx;
  color: #1eac58;
}

.iconWords {
  font-size: 34rpx;
  color: #1eac58;
}

.activ_rule {
  display: flex;
  flex-direction: column;
  width:690rpx;
  padding: 20rpx 30rpx;
}

.mom_intro {
  width: 690rpx;
  padding: 20rpx 30rpx;
}

.dot_words_box {
  display: flex;
  margin-bottom: 25rpx;
}

.green_dot2 {
  width: 15rpx;
  height: 15rpx;
  background: #1eac58;
  border-radius: 50%;
  margin: 14rpx 25rpx 0 0;
}

.rule_words {
  font-size: 28rpx;
  color: #666;
  width: 640rpx;
}

.rule_pic {
  width: 690rpx;
  height: 284rpx;
  margin-bottom: 20rpx;
}

/* 底部交互栏 */

.interactive_box {
  width: 100%;
  height: 8vh;
  display: flex;
  position: fixed;
  bottom: 0;
  z-index: 10;
}

.homeIcon_box, .commentIcon_box, .shareBtn_box {
  display: flex;
  flex-direction: column;
  align-items: center;
  width: 135rpx;
  height: 98rpx;
  border-top: 1rpx solid #b1b1b1;
}

.shareBtn_box {
  line-height: normal;
  background: #fff;
  border-radius: 0;
}

.shareBtn_box::after {
  border: none;
}

.homeIcon_box {
  border-right: 1rpx solid #b1b1b1;
}

.homeIcon, .commentIcon, .shareIcon {
  font-size: 50rpx;
  margin-top: 10rpx;
  color: #333;
}

.story_mom {
  width: 345rpx;
  height: 98rpx;
  background: #03b349;
  text-align: center;
  line-height: 98rpx;
}

.apply {
  font-size: 30rpx;
  color: #fff;
}

/* 用户评论 */

.user_comments {
  width: 100%;
  margin-top: 20rpx;
}

.uc_content {
  margin-bottom: 20rpx;
  background: #fff;
}

.uc_top_box {
  padding: 10rpx 30rpx;
  display: flex;
  justify-content: space-between;
}

.uct_left {
  display: flex;
  align-items: flex-end;
}

.head_img {
  width: 90rpx;
  height: 90rpx;
  border-radius: 50%;
}

.name_time {
  margin: 0 20rpx;
  display: flex;
  flex-direction: column;
}

.user_name {
  max-width: 180rpx;
  font-size: 34rpx;
  color: #1eac58;
}

.publish_time {
  font-size: 24rpx;
  color: #999;
}

.medal-list {
  height: 100%;
  display: flex;
  align-items: center;
}

.greenLV, .redLV, .yellowLV {
  width: 56rpx;
  height: 56rpx;
  margin-right: 8rpx;
}

.uct_right {
  display: flex;
  justify-content: center;
  align-items: center;
}

.rigth_btn1 {
  font-size: 30rpx;
  width: 105rpx;
  height: 55rpx;
  color: #1eac58;
  border: 2rpx solid #1eac58;
  border-radius: 6rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}

.plus_icon {
  margin-right: 10rpx;
  font-size: 26rpx;
  color: #1eac58;
}

.uc_mid_box {
  display: flex;
  flex-direction: column;
  align-items: center;
}

/* 九宫格图片 */

.comment_pic_box {
  width: 690rpx;
  margin: 16rpx 5rpx 0 0;
  font-size: 0rpx;
}

.comment_pic {
  max-width: 210rpx;
  height: 210rpx;
  margin: 0 5rpx 5rpx 0;
}

.like_reply {
  width: 690rpx;
  padding: 0rpx 30rpx 20rpx 30rpx;
  display: flex;
  justify-content: flex-end;
  align-items: center;
  border-bottom: 2rpx solid #f2f2f2;
}

.like_icon {
  width: 50rpx;
  height: 45rpx;
}

.icon-liuyan2 {
  font-size: 55rpx;
  color: #666;
  margin: 0 30rpx 0 55rpx;
}

.leave_word {
  width: 690rpx;
  padding: 20rpx 30rpx;
  display: flex;
  flex-direction: column;
}

.lw_top {
  display: flex;
  justify-content: flex-start;
  align-items: center;
}

.lwt_icon {
  width: 28rpx;
  height: 28rpx;
}

.lwt_text {
  margin-left: 10rpx;
  font-size: 24rpx;
}

.lw_item {
  margin-top: 16rpx;
  font-size: 28rpx;
  display: flex;
  flex-direction: column;
}

.lw_item image {
  margin-top: 10rpx;
  width: 190rpx;
  height: 190rpx;
}

.user_reply {
  margin-top: 10rpx;
}
