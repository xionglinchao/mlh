page {width:100%;height:100%;}
.pClass {width:100%;height:100%;background:#f0f0f0;}
.imageViewClass {width:100%;height:50px;float:left;background:white;position:relative;}
.imageViewClass .userImage {width:30px;height:30px;margin-top:10px;margin-left:10px;float:left;color:#666;}
.imageViewClass .text2 {position:absolute;left:10px;bottom:10px;width:30px;height:10px;font-size:7px;color:white;text-align:center;line-height:10px;background:rgba(60,157,112,0.5);}
.imageViewClass .text1 {display:block;float:left;font-size:14px;line-height:50px;margin-left:8px;}
.imageViewClass .image1 {width:20px;height:20px;float:left;margin-top:15px;margin-left:8px;}
.type2 {width:100%;height:auto;background:white;float:left;}
.type2 textarea {width:calc(100% - 30px);margin-left:15px;margin-top:15px;height:100px;float:left;}
.type2 .ImageViewClass {width:100%;height:auto;float:left;margin-bottom:30px;}
.type2 .ImageViewClass .addImageViewClass {width:70px;height:70px;border:2px dashed #999;margin-left:15px;border-radius:4px;float:left;}
.type2 .ImageViewClass .addImageViewClass image {width:30px;height:30px;margin-left:20px;margin-top:8px;}
.type2 .ImageViewClass .addImageViewClass text {display:block;float:left;width:100%;height:20px;line-height:20px;text-align:center;font-size:13px;color:#999;}
.type2 .ImageViewClass .addImageView1Class {width:70px;margin-left:15px;float:left;position:relative;}
.type2 .ImageViewClass .addImageView1Class .image2 {width:20px;height:20px;position:absolute;top:0px;right:0px;background:white;border-radius:50%;}
.plViewClass {width:100%;height:40px;line-height:40px;text-align:center;font-size:14px;color:white;background:#1eac58;margin-top:20px;position:fixed;bottom:0px;}
.plViewClass button {background:#ff6600;padding-left:0px;padding-right:0px;color:white;font-size:14px;line-height:40px;border-radius:4px;}
.plViewClass button::after {content:none;}
