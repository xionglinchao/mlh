/* pages/systemMessage/systemMessage.wxss */
page {width:100%;height:100%;background:#f0f0f0;}
.system_message_scroll {width:100%;height:100%;}
.system_item_view {width:100%;float:left;}
.item_times {display:block;float:left;margin-top:20px;width:100%;text-align:center;line-height:30px;color:#999;font-size:13px;}
.item_content_view {width:calc(100% - 30px);margin-left:15px;background:white;border-radius:5px;float:left;position:relative;}
.item_name {display:block;float:left;line-height:18px;font-size:13px;color:#333;width:calc(100% - 20px);margin:10px;}
.item_dotted {position:absolute;width:5px;height:5px;right:10px;top:10px;background:red;border-radius:50%;}
