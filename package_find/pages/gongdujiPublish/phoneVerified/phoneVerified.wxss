.page_box {
  width: 100%;
  height: 100vh;
  background: #fbf9fe;
}

.top_box {
  width: 100%;
  height: 84rpx;
  display: flex;
  align-items: center;
}

.vertical_line {
  width: 12rpx;
  height: 36rpx;
  background: #29aa33;
  margin-left: 30rpx;
}

.sms_verify {
  font-size: 30rpx;
  color: #737374;
  padding-left: 12rpx;
}

.verify_box {
  display: flex;
  flex-direction: column;
  background: #ffffff;
}

.phoneNum_box {
  display: flex;
  align-items: center;
  width: 720rpx;
  height: 90rpx;
  margin-left: 30rpx;
  border-bottom: 1rpx solid #f0f0f0;
}

.phone_num {
  font-size: 28rpx;
}

.input_phoneNum {
  font-size: 28rpx;
  margin-left: 20rpx;
  width: 386rpx;
}

.verification_code {
  font-size: 28rpx;
  width: 200rpx;
  height: 90rpx;
  text-align: center;
  line-height: 90rpx;
}

button[plain] {
  color: #3cc51f;
	border: 0;
}

button[plain][disabled] {
	color: #3cc51f;
	background: transparent;
}

.code {
  margin-left: 50rpx;
}

.next_step {
  width: 690rpx;
  height: 100rpx;
  border-radius: 10rpx;
  background: #9ed99d;
  font-size: 34rpx;
  color: #d8f0d8;
  display: flex;
  justify-content: center;
  align-items: center;
  margin: 30rpx 0 0 30rpx;
}
.next_step.active {
  background: #1EAC58;
  color: #fff;
}