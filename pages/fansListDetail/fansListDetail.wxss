page {
  width: 100%;
  background: #1EAC58;
  position: relative;
}

.partner_bg1 {
  width: 100%;
  height: 1200rpx;
  position: absolute;
  top: 0;
  z-index: 10;
}

.partner_bg2 {
  width: 640rpx;
  height: 1060rpx;
  position: absolute;
  top: 0;
  z-index: 20;
  margin-left: 55rpx;
}

/* 用户头像 */
.user_photo {
  width: 110rpx;
  height: 110rpx;
  border-radius: 50%;
  background: #FFC345;
  display: flex;
  justify-content: center;
  align-items: center;
  position: absolute;
  z-index: 40;
  top: 140rpx;
  left: 50%;
  margin-left: -55rpx;
}

.user_photo image {
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
  background: lightblue;
}

.user_info {
  width: 100%;
  position: absolute;
  top: 320rpx;
  z-index: 30;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}

.profit {
  width: 100%;
  display: flex;
  justify-content: center;
  align-items: flex-end;
}

.profit>text:first-child {
  font-size: 48rpx;
  font-weight: bold;
  color: #1EAC58;
}

.profit>text:nth-child(2) {
  font-size: 28rpx;
  color: #1EAC58;
  padding: 0 0 10rpx 10rpx;
}

.identity {
  width:272rpx;
  height:70rpx;
  background:linear-gradient(0deg,rgba(243,162,31,1),rgba(253,189,54,1));
  box-shadow:0px 4rpx 10rpx 0px rgba(245,165,33,0.34);
  border-radius:35rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  font-size: 35rpx;
  color: #fff;
  margin: 6rpx 0 8rpx 0;
}

.fans_partner {
  width: 530rpx;
  display: flex;
  justify-content: space-between;
  font-size: 26rpx;
}

.fans_num {
  color: #FDCC6D;
}

.partner_num {
  color: #EA8760;
}

.tips {
  width: 100%;
  text-align: center;
  font-size: 24rpx;
  color: #fff;
  position: absolute;
  top: 1084rpx;
  z-index: 30;
}

/* 近6个月收益 */
.recent_profit {
  width: 320rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-top: 70rpx;
}

.grey_line {
  width: 40rpx;
  height: 1rpx;
  background: #bbb;
}

.six_month {
  font-size: 24rpx;
  color: #666;
}

.profit_form {
  width: 512rpx;
  height: 240rpx;
  border-bottom: 1rpx solid #eee;
  display: flex;
  margin-top: 30rpx;
}

.form_title{
  display: flex;
  flex-direction: column;
  font-size: 20rpx;
  color: #666;
}

.title_month, .title_profit, .title_sale {
  width: 72rpx;
  height: 80rpx;
  border-top: 1rpx solid #eee;
  border-left: 1rpx solid #eee;
  border-right: 1rpx solid #eee;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}