.page_box {
  width: 100%;
  height: 100vh;
  background: linear-gradient(to top right, rgb(20, 112, 61), rgb(223, 243, 172));
  display: flex;
  flex-direction: column;
  align-items: center;
}

.top_title_box {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding-top: 14rpx;
}

.left_line, .right_line {
  width: 270rpx;
  height: 46rpx;
}

.title_words {
  font-size: 34rpx;
  color: #2f8d4d;
}

.scroll_list {
  width: 690rpx;
  height: 92vh;
  background: rgba(255, 255, 255, 0.5);
  margin-top: 15rpx;
}

/* 排名信息 */

.rank_info_box {
  width: 670rpx;
  margin-left: 20rpx;
  border-bottom: 2rpx solid #e8f5e3;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.user_info_box {
  display: flex;
  align-items: center;
  margin: 16rpx 0;
}

.image_box {
  width: 70rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}

.num1 {
  width: 35rpx;
  height: 45rpx;
}

.num_4 {
  font-size: 38rpx;
  color: #fff;
  width: 70rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}

.num_circle {
  width: 66rpx;
  height: 66rpx;
  border-radius: 50%;
  display: flex;
  justify-content: center;
  align-items: center;
  margin: 0 20rpx 0 10rpx;
}

.user_photo {
  width: 60rpx;
  height: 60rpx;
  border-radius: 50rpx;
}

.user_name {
  font-size: 28rpx;
  color: #333;
  max-width: 200rpx;
}

.donation_bean_num {
  font-size: 24rpx;
  color: #333;
  padding-right: 25rpx;
}