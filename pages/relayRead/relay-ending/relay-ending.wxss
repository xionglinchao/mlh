.relaying-box,.scroll-box {width:100%;height:100vh;}
.relaying-container {width:100%;display:flex;justify-content:space-between;}
.user-info {display:flex;justify-content:space-between;}
.user-pic {width:90rpx;height:90rpx;border-radius:50%;margin:32rpx 0 0 20rpx;position:relative;z-index:6;}
.nbt-box {display:flex;flex-direction:column;align-items:flex-start;}
.user-begin {display:flex;/* justify-content:space-between;*/  align-items:center;}
.user-name {font-size:34rpx;color:#1eac58;padding:34rpx 16rpx 0 16rpx;width:220rpx;overflow:hidden;text-overflow:ellipsis;white-space:nowrap;}
.begin,.ending,.processing {font-size:20rpx;color:#fff;width:69rpx;height:36rpx;text-align:center;padding-top:6rpx;border-radius:4rpx;margin-top:36rpx;}
.begin {background-color:#fcd232;}
.ending {background-color:#999;}
.processing {background-color:#fc832e;}
.recorder-time {font-size:24rpx;color:#999;padding-left:16rpx;padding-top:14rpx;}
.nbtm-box {display:flex;justify-content:space-between;}
.level-box {display:flex;justify-content:space-between;}
.green-medal,.red-medal,.yellow-medal {width:60rpx;height:60rpx;padding:40rpx 0 0 16rpx;}
.sub-box {display:flex;flex-direction:column;align-items:flex-end;}
.subscribe {font-size:24rpx;color:#1eac58;padding:8rpx 12rpx;border:2rpx solid #1eac58;border-radius:4rpx;text-align:center;margin-right:30rpx;margin-top:30rpx;}
.bang-number {font-size:22rpx;color:#999;margin-top:10rpx;margin-right:22rpx;}
.dialog2 {position:relative;left:105rpx;top:6rpx;max-width:570rpx;background-color:#f8f8f8;font-size:28rpx;color:#666;padding:20rpx;word-wrap:break-word;}
.dialog2:before {position:absolute;content:"";width:0;height:0;left:-14rpx;top:-34rpx;border-bottom:40rpx solid #f8f8f8;border-right:40rpx solid transparent;}
.dialog2:after {position:absolute;content:"";width:0;height:0;left:-14rpx;top:-40rpx;border-bottom:56rpx solid #fff;border-right:17rpx solid transparent;}
