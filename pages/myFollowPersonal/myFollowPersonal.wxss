page {
  width: 100%;
  height: 100%;
  background: #f0f0f0;
}

.transverse_scroll {
  width: 100%;
  height: 40px;
  background: white;
  display: flex;
  border-bottom: 1px solid #f0f0f0;
}

.book_class_view {
  width: 50%;
  height: 38px;
  text-align: center;
  line-height: 38rpx;
}

.book_class_text {
  color: #666;
  line-height: 38px;
  font-size: 13px;
  width: 100%;
  height: 100%;
  text-align: center;
}

.text_block {
  border-bottom: 2rpx solid #1aad19;
}

.book_class_text_line {
  position: absolute;
  left: 0;
  bottom: 0;
  width: 50%;
  height: 2px;
  background-color: #1aad19;
  -webkit-transition: -webkit-transform 0.3s;
  transition: -webkit-transform 0.3s;
  transition: transform 0.3s;
}

.book_tab {
  width: 100%;
  height: calc(100% - 40px);
}

.tab_view {
  width: 100%;
  height: 100%;
}

.page_scroll {
  width: 100%;
  height: 100%;
}

.attention_view {
  width: 100%;
  height: 70px;
  float: left;
  background: white;
  border-bottom: 1px solid #f0f0f0;
}

.attention_view image {
  width: 44px;
  height: 44px;
  padding: 10px;
  margin-top: 3px;
  float: left;
}

.attention_content_view {
  width: calc(100% - 160px);
  float: left;
  height: 100%;
  margin-left: 10px;
}

.attention_content_name {
  height: 30px;
  padding-top: 13px;
  font-size: 16px;
  display: block;
  float: left;
  color: #333;
  width: 100%;
}

.attention_content_create {
  display: block;
  float: left;
  font-size: 8px;
  color: #999;
  margin-right: 20px;
  height: 14px;
}

.attention_content_gz {
  display: block;
  float: left;
  font-size: 8px;
  color: #999;
  height: 14px;
}

.recommend_item_follow {
  height: 24px;
  line-height: 24px;
  border: 1px solid #1aad19;
  border-radius: 3px;
  text-align: center;
  display: block;
  float: right;
  font-size: 13px;
  color: #1aad19;
  padding-left: 10px;
  padding-right: 10px;
  margin-top: 18px;
  margin-right: 10px;
}
