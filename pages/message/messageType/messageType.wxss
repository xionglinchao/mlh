.page_box {
  width: 100%;
  /* height: 100vh; */
}

.touch-item {
  display: flex;
  justify-content: space-between;
  width: 100%;
  border-bottom: 1rpx solid #f0f0f0;
  overflow: hidden;
}

.unread_msg_box {
  width:850rpx;
  display: flex;
  justify-content: space-between;
  /* align-items: center; */
  padding: 30rpx;
  -webkit-transition: all 0.4s;
  transition: all 0.4s;
  -webkit-transform: translateX(90px);
  transform: translateX(90px);
  margin-left: -90px;
}

.del {
  font-size: 28rpx;
  background-color: orangered;
  width: 90px;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  color: #fff;
  -webkit-transform: translateX(90px);
  transform: translateX(90px);
  -webkit-transition: all 0.4s;
  transition: all 0.4s;
}

.touch-move-active .unread_msg_box, .touch-move-active .del {
  -webkit-transform: translateX(0);
  transform: translateX(0);
}

.user_photo {
  width: 90rpx;
  height: 90rpx;
  border-radius: 50%;
  background: lightblue;
}

.msg_detail {
  width: 100%;
  height: 90rpx;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  padding-left: 15rpx;
}

.name_time, .content_num {
  width: 100%;
  display: flex;
  justify-content: space-between;
  align-items: flex-end;
}

.user_name {
  font-size: 30rpx;
  max-width: 150rpx;
}

.msg_time {
  font-size: 24rpx;
  color: #c3c3c3;
  margin-right: 30rpx;
}

.msg_pic {
  width: 114rpx;
  height: 114rpx;
  margin-right: 30rpx;
}

.msg_cont {
  max-width: 400rpx;
  font-size: 28rpx;
  color: #666;
}

.msg_num {
  width: 40rpx;
  height: 40rpx;
  border-radius: 50%;
  background: #f80000;
  color: #fff;
  font-size: 28rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-right: 30rpx;
}

/* 动态消息 */
.active_msg_detail {
  width: 100%;
  display: flex;
  justify-content: space-between;
}

.name_cont_time {
  display: flex;
  flex-direction: column;
  margin-left: 20rpx;
}

.focus_btn {
  width: 120rpx;
  height: 60rpx;
  border-radius: 30rpx;
  background: #1EAC58;
  color: #FFFFFF;
  font-size: 30rpx;
  text-align: center;
  line-height: 60rpx;
  margin-right: 30rpx;
}

.cont_pic {
  width: 120rpx;
  height: 120rpx;
  background: lightblue;
  margin-right: 30rpx;
}