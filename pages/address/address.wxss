page {width:100%;height:100%;}
.pViewClass {width:100%;height:100%;background:#f0f0f0;}
.scrollClass {width:100%;height:calc(100% - 40px);}
.scrollClass .dataViewClass {width:100%;height:auto;background:white;position:relative;margin-bottom:10px;padding:8px 0px 10px 0px;}
.scrollClass .dataViewClass image {width:30px;height:30px;position:absolute;right:10px;top:5px;}
.scrollClass .dataViewClass .text1 {display:block;float:left;height:30px;font-size:14px;color:#666;width:calc(100% - 50px);line-height:30px;margin-left:15px;}
.scrollClass .dataViewClass .view1 {width:100%;height:auto;}
.scrollClass .dataViewClass .view1 .text2 {display:block;float:left;font-size:14px;margin-left:15px;color:#0066FF;width:40px;}
.scrollClass .dataViewClass .view1 .text3 {display:block;float:left;font-size:14px;margin-left:15px;color:#666;width:calc(100% - 80px);}
.addViewClass {display:block;float:left;width:100%;height:50px;line-height:50px;text-align:center;background:#ff6600;color:white;font-size:15px;position:fixed;bottom:0px;}
