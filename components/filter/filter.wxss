.filter_container {width:100%;height:100vh;position:absolute;top:0;left:0;z-index:1000;}
.backdrop {position:fixed;top:0;width:100%;height:100vh;background:rgba(0,0,0,0.4);animation:fadeIn ease 0.3s forwards;}
.filter_box {width:650rpx;height:100%;position:fixed;top:0;right:0;background:#fff;}
.filter_show {animation:slideInRight ease 0.3s forwards;}
.filter_hide {animation:slideInLeft ease 0.3s forwards;}
.fliter_content {width:650rpx;height:92vh;overflow-y:scroll;}
.screen_box {width:100%;height:60rpx;background:#F0F0F0;font-size:28rpx;color:#666666;display:flex;align-items:center;}
.screening {padding-left:16rpx;}
.content_panel {padding-bottom:10rpx;border-bottom:2rpx #e6e6e6 solid;}
.content_panel:last-child {border-bottom:none;}
.panel_hd {margin-left:20rpx;padding:25rpx 0 15rpx 0;display:flex;justify-content:space-between;align-items:center;}
.panel_bd {margin-left:20rpx;}
.panel_title {color:#000;font-size:30rpx;}
.panel_selected {flex:3;margin:0 20rpx;font-size:26rpx;text-align:right;overflow:hidden;text-overflow:ellipsis;white-space:nowrap;word-wrap:normal;}
.panel_more {margin-right:20rpx;font-size:24rpx;display:flex;align-items:center;}
.panel_more_img {margin-left:8rpx;width:14rpx;height:8rpx;}
.panel_groups {overflow:hidden;font-size:26rpx;margin:auto;}
.panel_group {position:relative;height:64rpx;width:33.3333%;margin:12rpx 0;padding-right:20rpx;color:#232323;float:left;box-sizing:border-box;overflow:hidden;text-overflow:ellipsis;white-space:nowrap;word-wrap:normal;}
.panel_radio,.panel_checkbox,.panel_btn {height:64rpx;display:flex;justify-content:center;align-items:center;border-radius:6rpx;border:2rpx solid #b3b3b3;box-sizing:border-box;overflow:hidden;text-overflow:ellipsis;white-space:nowrap;word-wrap:normal;}
.panel_radio,.panel_checkbox {position:absolute;left:0;top:0;width:100%;opacity:0;}
.price_input_box {padding:20rpx 20rpx 0 0;display:flex;justify-content:space-between;align-items:center;}
.price_ipnut_line {height:100%;color:#b3b3b3;}
.price_ipnut {width:220rpx;height:68rpx;border:2rpx #b3b3b3 solid;text-align:center;font-size:28rpx;}
.price_input_plh {text-align:center;font-size:28rpx;color:#999;}
.filter_btns {width:100%;height:8vh;position:absolute;bottom:0;display:flex;justify-content:space-between;border-top:2rpx solid #f2f2f2;}
.filter__btn {flex:1;line-height:8vh;text-align:center;font-size:32rpx;background:#fff;color:#333;letter-spacing:6rpx;}
.filter_confirm_btn {color:#fff;}
@keyframes fadeIn {0% {opacity:0;}100% {opacity:1;}}
@keyframes slideInRight {0% {transform:translate3d(100%,0,0);}100% {transform:translate3d(0);}}
@keyframes slideInLeft {0% {transform:translate3d(0);}100% {transform:translate3d(100%,0,0);}}
